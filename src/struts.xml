<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.il8n.encoding" value="utf-8" />
	<package name="aution" extends="struts-default,json-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="login" class="action.UserLoginAction">
			<result name="success">/welcome.jsp</result>
			<result name="teasuccess">/teacher.jsp</result>
		</action>
		<action name="loginOut" class="action.UserLoginAction" method="loginOut">
			<result name="success">/index.jsp</result>
		</action>
		<action name="changePW" class="action.UserLoginAction" method="changePW">
			<result type="json" name="result">
				<param name="data">data</param>
			</result>
		</action>
		<action name="register" class="action.UserRegisterAction" method="register">
			<result name="success">/welcome.jsp</result>
		</action>
		
		<!--item-->
		<action name="getAllItems" class="action.ItemAction" method="getAllItems">
			<result type="json" name="result">
				<param name="data">data</param>
			</result>
		</action>
		<action name="ItemAdd" class="action.ItemAction">
			<result name="success">/welcome.jsp</result>
		</action>
		<action name="hhh" class="action.ItemAction" method="getItemsById">
			<result type="json" name="result">
				<param name="data">data</param>
			</result>
		</action>
		
		<!--grade-->
		<action name="getGrade" class="action.GradeAction">
			<result name="success">/welcome.jsp</result>
		</action>
		
		<!--Exampaper-->
		<action name="setExampaper" class="action.TeaExampaperAction">
			<result name="success">/welcome.jsp</result>
		</action>
		
		<!--Exam/Teacher-->
		<action name="addExam" class="action.TeaExamAction" method="addExam">
			<result name="success">/teacher/manageexamitemlist.jsp</result>
		</action>
		<action name="RandomExam" class="action.TeaExamAction" method="RandomExam">
			<result name="success">/welcome.jsp</result>
		</action>
		<action name="confirmExam" class="action.TeaExamAction" method="confirmExam">
			<result name="success">/teacher/manageexamitemalter.jsp</result>
		</action>
		<action name="getAllExam" class="action.TeaExamAction" method="getAllExam">
			<result type="json" name="result">
				<param name="data">data</param>
			</result>
		</action>
		<action name="itemlist" class="action.TeaExamAction" method="itemlist">
			<result name="success">/teacher/manageexamitemlist.jsp</result>
		</action>
		<!--Exam/Student-->
		<action name="ExamById" class="action.StuExamAction" method="ExamById">
			<result name="success">/success.jsp</result>
		</action>
		<action name="test" class="action.StuExamAction" method="test">
			<result name="success">/success.jsp</result>
		</action>
		
		<action name="marking" class="action.MarkingSystemAction" method="marking">
			<result name="success">/success.jsp</result>
		</action>
	</package>

</struts>